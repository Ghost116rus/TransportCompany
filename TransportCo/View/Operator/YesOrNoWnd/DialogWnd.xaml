<Window x:Class="TransportCo.View.Operator.YesOrNoWnd.DialogWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportCo.View.Operator.YesOrNoWnd"
        mc:Ignorable="d"
        Title="Диалоговое окно" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock Width="200" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" FontFamily="Russo One">Вы точно уверены, что хотите сохранить результат?</TextBlock>
        <Button Content="Да" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="50,0,0,20" Background="#FFB3F5E2" Click="Button_Click"/>
        <Button Content="Нет" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,20" Background="#FFF7B3B3" Click="Button_Click_1"/>

    </Grid>
</Window>
